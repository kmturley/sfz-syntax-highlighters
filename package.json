{
  "name": "sfz-syntax-highlighters",
  "version": "0.0.2",
  "description": "Auto-generation of sfz syntax highlighters for code editors",
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf ./dist && tsc && npm run copy",
    "copy": "copyfiles -u 1 ./src/templates/* ./dist && copyfiles -u 2 ./src/html/**/* ./out",
    "dev": "ts-node src/index.ts",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint": "tslint -p tsconfig.json",
    "start": "node dist/index.js",
    "test": "echo 'No tests were run'"
  },
  "keywords": [
    "sfz",
    "syntax",
    "highlighters",
    "generation",
    "sample"
  ],
  "author": "kmturley",
  "license": "CC0-1.0",
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^18.11.18",
    "@types/node-fetch": "^2.6.2",
    "copyfiles": "^2.4.1",
    "prettier": "^2.8.1",
    "rimraf": "^4.1.2",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "node-fetch": "^2.6.9",
    "xml-js": "^1.6.11"
  }
}
